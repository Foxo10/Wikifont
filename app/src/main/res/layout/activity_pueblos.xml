<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PueblosActivity">

    <TextView
        android:id="@+id/textViewPueblosVizcaya"
        android:layout_width="363dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/localidades"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewPueblos"
        android:layout_width="279dp"
        android:layout_height="171dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Lista de pueblos de Vizcaya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPueblosVizcaya" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="292dp"
        android:layout_height="253dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewPueblos"
        app:layout_constraintVertical_bias="0.034">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>