<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WikiFountains" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verdoso</item>
        <item name="colorPrimaryVariant">@color/cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/verdoso</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/verdoso</item>
        <item name="android:navigationBarColor">@color/verdoso</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Colores específicos para el modo oscuro -->
        <item name="backgroundColor">#121212</item>
        <item name="cardBackgroundColor">#242424</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/verdoso</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <!-- Light application theme. -->
    <style name="Theme.WikiFountains.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/cyan</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Colores específicos para el modo claro -->
        <item name="backgroundColor">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorButtonNormal">@color/cyan</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <!-- Font application theme. -->
    <style name="Theme.WikiFountains.Font" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/amber</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/amber</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/cyan</item>
        <item name="android:navigationBarColor">@color/cyan</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="backgroundColor">@color/gray</item>
        <item name="cardBackgroundColor">@color/gray</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="colorButtonNormal">@color/amber</item>
        <item name="android:fontFamily">monospace</item>
        <item name="fontFamily">monospace</item>

    </style>

    <style name="Theme.WikiFountains.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.WikiFountains.AppWidgetContainer" parent="Theme.WikiFountains.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>